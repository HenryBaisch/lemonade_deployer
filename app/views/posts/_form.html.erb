          <div class="form-group">
            <%= f.label :date %>
            <%= f.date_field :date, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :time %>
            <%= f.time_field :time, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :Venue %>
            <%= f.text_field :location, class: "form-control", placeholder: "venue name" %>
          </div>
          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_field :address, class: "form-control", placeholder: "venue address" %>
          </div>
          <div >
          <div class="modal-footer border-0 pt-4 pb-3">
            <div class="position-absolute bottom-0 end-0 mb-2 mx-3">
              <%= f.submit "Share Post", class: "submit-btn " %> <i class="fas fa-rocket icon-light"></i>
            </div>
          </div>

          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>