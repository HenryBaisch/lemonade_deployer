


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content custom-modal-content">
      <div class="modal-header border-0">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">New Show</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: post) do |f| %>
          <% if post.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
                <% post.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          
          
          


        
          <div class="form-group">
            <%= f.label :add_poster %>
            <%= f.file_field :image, class: "form-control", id: "image-input" %>
            <div class="card rounded-top mt-2 border-0 rounded-bottom">
              <img id="image-preview" src="#" alt="Image Preview" style="display: none;">
            </div>
          </div>

          
          <div class="form-group">
            <%= f.label :Headline %>
            <%= f.text_field :title, class: "form-control", placeholder: "Add a catchy headline for your show" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", placeholder: "Add a show description" %>
          </div>

          <div class="form-group">
            <%= f.label :artist %>
            <%= f.text_field :artist, class: "form-control", placeholder: "Who will be performing?" %>
          </div>

          <div class="form-group">
            <%= f.label :genre %>
            <%= f.text_field :genre, class: "form-control", placeholder: "Add a genre" %>
          </div>
